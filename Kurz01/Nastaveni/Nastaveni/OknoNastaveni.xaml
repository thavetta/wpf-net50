<Window x:Class="Nastaveni.OknoNastaveni"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Nastaveni"
        xmlns:prop="clr-namespace:Nastaveni.Properties"
        mc:Ignorable="d"
        Title="OknoNastaveni" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="337*"/>
            <RowDefinition Height="97*"/>
        </Grid.RowDefinitions>
        <StackPanel>
            <Label>Velikost pisma</Label>
            <TextBox Text="{Binding Source={x:Static prop:Settings.Default}, Path=Pismo, Mode=TwoWay}" />
            <Label>Nadpis okna</Label>
            <TextBox Text="{Binding Source={x:Static prop:Settings.Default}, Path=Nadpis, Mode=TwoWay}" />

        </StackPanel>
        <StackPanel Orientation="Horizontal" Grid.Row="1">
            <Button Width="100" Height="50" Margin="20" Click="OKAkce">OK</Button>
            <Button Width="100" Height="50" Margin="20" Click="CancelAkce">Cancel</Button>
        </StackPanel>
    </Grid>
</Window>
