<Window x:Class="Nastaveni.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Nastaveni"
        xmlns:prop="clr-namespace:Nastaveni.Properties"
        mc:Ignorable="d"
        Title="{Binding Source={x:Static prop:Settings.Default}, Path=Nadpis, Mode=OneWay}" Height="450" Width="800"
        >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="381*"/>
            <ColumnDefinition Width="419*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.RowSpan="2">
            <Label Margin="20" FontSize="{Binding Source={x:Static prop:Settings.Default}, Path=Pismo,Mode=OneWay}">Prvni</Label>
            <Label Margin="20">Druhy</Label>
            <Label Margin="20">Treti</Label>
            <Label Margin="20">Ctvrty</Label>
        </StackPanel>
        <Button Width="150" Height="50" Margin="20" Grid.Column="1" Click="Akce" Content="Akce" />
    </Grid>
</Window>
